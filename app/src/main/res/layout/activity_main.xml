<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.bratexsoft.playgroundfitsapp.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="328dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#42384c"
        app:cardCornerRadius="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <io.bratexsoft.playgroundfitsapp.LineView
                android:id="@+id/first_level"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:baseColor="#7b6b8b"
                app:icon="@drawable/ic_rings_icon_pause"
                app:iconSize="12dp"
                app:level="0"
                app:levelColor="#3bb0e5" />

            <io.bratexsoft.playgroundfitsapp.LineView
                android:id="@+id/second_level"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:baseColor="#7b6b8b"
                app:icon="@drawable/ic_rings_icon_intensity"
                app:iconSize="12dp"
                app:level="80"
                app:levelColor="#9876bc" />

            <io.bratexsoft.playgroundfitsapp.LineView
                android:id="@+id/third_level"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:baseColor="#7b6b8b"
                app:icon="@drawable/ic_rings_icon_repetition"
                app:iconSize="12dp"
                app:level="20"
                app:levelColor="#ff377d" />
        </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
